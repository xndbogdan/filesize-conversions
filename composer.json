{
    "name": "xndbogdan/filesize-conversions",
    "description": "Filesize conversions in PHP",
    "keywords": [
        "xndbogdan",
        "filesize-conversions"
    ],
    "homepage": "https://github.com/xndbogdan/filesize-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "Bogdan Mihai",
            "email": "bogdan.mosteanu@hey.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "XndBogdan\\FilesizeConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "XndBogdan\\FilesizeConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
